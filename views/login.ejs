<%- include('partials/header'); -%>

    <header class='header' id="login-header">
        <a class="logo" href="/"> <img class="icon" src="img/lightning-pos-icon.svg"></img> Lightning</a>
    </header>

    <section id="logIn">
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el=> { %>
                <div class="alert alert-danger">
                    <%= el.msg %>
                </div>
                <% }) %>
                    <% } %>
                        <% if (locals.messages.info) { %>
                            <% messages.info.forEach( el=> { %>
                                <div class="alert alert-info">
                                    <%= el.msg %>
                                </div>
                                <% }) %>
                                    <% } %>

                                        <!-- LOGIN FORM -->
                                        <form action="/login" method="post">
                                            <h2 class="gold-text">Log in to your account</h2>
                                            <input type="text" class="form-control" name="email"
                                                placeholder="Email Adress">
                                            <input type="password" class="form-control" name="password"
                                                placeholder="Password">
                                            <button type="submit" class="btn primary-btn">Login</button>
                                            <p>Not registered? <a class="gold-text" href="/signup">Create an account</a>
                                            </p>
                                        </form>
    </section>
    <%- include('partials/footer'); -%>