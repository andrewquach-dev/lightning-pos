<%- include('partials/header-v2') -%>
    <header id="header" class="header">
        <div class="container">
            <a class="logo" href="/"> <img class="icon" src="/img/lightning-pos-icon.svg"></img> Lightning</a>
            <ul role='list' class="links">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/">Account</a></li>
                <li><a href="/">Inbox</a></li>
                <li><a href="/">Help</a></li>
                <li><a href="/">Settings</a></li>
                <li><a href="/logout">Log out</a></li>
            </ul>
        </div>
    </header>

    <section id="dashboard" class="container">
        <div class="tables-card card xl-height xl-width">
            <div class="top-card-text">
                <h3>Tables</h3>
                <a href="">View mode: Grid</a>
            </div>
            <div class="tables-view">
                <% for(var i=0; i<tables.length; i++) {%>
                    <div class="table">
                        <a href="/dashboard/tables/<%= tables[i]._id%>"><%= tables[i].name%></a>
                    </div>
                    <% } %>
            </div>
            <div class="card-bot">
                <a href="">Delete</a>
                <button class="open-button">Add</button>
                <dialog class="modal" id="modal">
                    <button class="close-button">Close</button>
                    <form action="/dashboard/tables/createTable"  method="POST">
                            <label for="title">Table Name</label>
                            <input type="text" id="title" name="title">
                        <button type="submit" class="btn btn-primary" value="Upload">Create</button>
                    </form>
                </dialog>
            </div>
        </div>
    </section>
    <%- include('partials/footer-v2') -%>